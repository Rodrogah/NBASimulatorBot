brew install nixpacks
nixpacks build ./path/to/app --name my-app
nixpacks build ./path/to/app --name my-app \
                             --pkgs cowsay \
                             --build-cmd ./build.sh \
                             --start-cmd "echo hello | cowsay"
docker run -it my-app


